{
    "version": 2,
    "builds": [
        {
            "src": "shoe_ecommerce/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.12",
                "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput --verbosity 2"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/staticfiles/$1"
        },
        {
            "src": "/(.*)",
            "dest": "shoe_ecommerce/wsgi.py"
        }
    ]
}